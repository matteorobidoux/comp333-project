{
	"version": 2,
	"builds": [
		{
			"src": "backend/index.js",
			"use": "@vercel/node",
			"config": {
				"includeFiles": ["models/**", "tools/**"]
			}
		},
		{
			"src": "backend/public/**",
			"use": "@vercel/static"
		}
	],
	"routes": [
		{
			"src": "/predict-(.*)",
			"dest": "/backend/index.js",
			"methods": ["POST"]
		},
		{
			"src": "/js/(.*)",
			"dest": "/backend/public/js/$1"
		},
		{
			"src": "/css/(.*)",
			"dest": "/backend/public/css/$1"
		},
		{
			"src": "/(.*)",
			"dest": "/backend/public/views/index.html"
		}
	]
}
