   "source": [
    "# Function to change column data\n",
    "def change_column_data(data):\n",
    "    # Change column names\n",
    "    data.columns = ['is_spam', 'text']\n",
    "\n",
    "    # print(data.head())\n",
    "\n",
    "    # Normalize data\n",
    "    data = normalize_data(data)\n",
    "\n",
    "    # Change column data\n",
    "    data['is_spam'] = data['is_spam'].map({'ham': 0, 'spam': 1, 0: 0, 1: 1})\n",
    "    \n",
    "    return data"
   ]
